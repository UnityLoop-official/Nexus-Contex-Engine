{
  "name": "nexus-context-engine",
  "displayName": "Nexus Context Engine",
  "description": "AI Context Engine for VS Code - Automatic code context extraction for LLM integration",
  "version": "0.1.1",
  "publisher": "nexusdev",
  "repository": {
    "type": "git",
    "url": "https://github.com/nexusdev/nexus-context-engine"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nexus.openChat",
        "title": "Nexus: Open Chat Panel",
        "category": "Nexus"
      },
      {
        "command": "nexus.compileContext",
        "title": "Nexus: Compile Context for Selection",
        "category": "Nexus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nexus-sidebar",
          "title": "Nexus Context",
          "icon": "resources/nexus-icon.svg"
        }
      ]
    },
    "views": {
      "nexus-sidebar": [
        {
          "id": "nexus.chatView",
          "name": "AI Chat",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Nexus Context Engine",
      "properties": {
        "nexus.daemonUrl": {
          "type": "string",
          "default": "http://localhost:5050",
          "description": "URL of the Nexus Daemon API"
        },
        "nexus.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for ChatGPT integration (stored securely)",
          "markdownDescription": "Your OpenAI API key. Get one at https://platform.openai.com/api-keys\n\n**Security**: Stored in VS Code settings. Never commit to git."
        },
        "nexus.llmModel": {
          "type": "string",
          "default": "gpt-5.1",
          "enum": [
            "gpt-5.1",
            "gpt-4o",
            "gpt-4o-mini",
            "gpt-4-turbo",
            "gpt-3.5-turbo"
          ],
          "description": "OpenAI model to use (GPT-5.1 recommended)"
        },
        "nexus.enableStreaming": {
          "type": "boolean",
          "default": true,
          "description": "Enable streaming responses from ChatGPT"
        },
        "nexus.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start daemon when VS Code opens"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "openai": "^6.10.0"
  }
}
